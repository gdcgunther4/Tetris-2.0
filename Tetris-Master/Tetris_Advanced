shapes = [S, Z, I, o, J, L, T, V, b, d, Y, Yt,X,c,t,P,Q,F,Ft,Lt,Jt, U,W,ET,ET2,N,NT,s,z,u,B,b,A,Bv2,M,l,j,n,k,e,E,H,g,q,h,hT,jf,gt,gl,Yv3,Bv3]
shape_colors = [(0, 255, 0), (255, 0, 0), (0, 255, 255), (255, 255, 0), (255, 165, 0), (0, 0, 255),
    (128, 0, 128),(255, 165, 165), (0, 165,165), (0, 255, 165), (128, 255, 165), (200, 150, 125),
